                            <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                                <th class="text-center">Khuyến mãi</th>
                                <th class="text-center">Sản phẩm</th>
                                <th class="text-center">Ngạy tạo</th>
                                <th class="text-center">Ngày kết thúc khuyến mãi</th>
                                <th class="text-center">Người tạo</th>
                                <th class="text-center">Hành động</th>
                            </tr>
                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody class="fw-normal text-gray-600">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex ">
                                            <a data-fslightbox href="@item.image_thumbnail">
                                                <div class="symbol symbol-45px me-3">
                                                    <img src="@item.image_thumbnail" alt="@item.banner_name" style="border: 1px solid #e8f3f3;" />
                                                </div>
                                            </a>
                                            <div class="d-flex justify-content-start flex-column ">
                                                <span class="limit_lenght_bannerdt text-gray-700 fw-bold" data-bs-toggle="tooltip" data-bs-placement="top" title="@item.banner_name">@item.banner_id - @item.banner_name</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex ">
                                            <a data-fslightbox href="@item.product_img">
                                                <div class="symbol symbol-45px me-3">
                                                    <img src="@item.product_img" alt="@item.product_name" style="border: 1px solid #e8f3f3;" />
                                                </div>
                                            </a>
                                            <div class="d-flex justify-content-start flex-column ">
                                                <a href="/san-pham/@item.product_slug" target="_blank" class="limit_lenght_productdt text-gray-700  fw-bold" data-bs-toggle="tooltip" data-bs-placement="top" title="@item.product_name">@item.product_id - @item.product_name</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span>@item.bannerdetail_create_at.ToString("dd-MM-yyyy HH:mm")</span>
                                    </td>
                                    <td class="text-center">
                                        <span>@item.banner_end.ToString("dd-MM-yyyy HH:mm")</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="limit_lenght_mail_bannerdt">@item.bannerdetail_create_by</span>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("BannerDDelete", "BannerDetails", new {id = item.banner_detail_id})" class="btn btn-icon btn-bg-light btn-active-color-danger btn-sm">
                                            <!--begin::Svg Icon | path: fonts/duotone/General/Trash.svg-->
                                            <span class="svg-icon svg-icon-3" data-bs-toggle="tooltip" data-bs-placement="top" title="Xóa vĩnh viễn">
                                                <svg width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
